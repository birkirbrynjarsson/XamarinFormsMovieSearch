<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MovieSearch"
             x:Class="MovieSearch.MainPage"
             Title="Greetings">
    <ContentPage.Content>
        <StackLayout Margin="20,40,20,20"
                     VerticalOptions="Start"
                     Spacing="10">
            <Entry x:Name="SearchInput"
                   Placeholder="Search for Movies"/>
            <Button x:Name="MovieListButton"
                    Text="See movies"
                    BorderColor="Color.Gray"
                    Clicked="MovieListButton_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>